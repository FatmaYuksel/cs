Public class AddtionPattern
{
	Private int start;
Private int add;
Private int current;

Public AdditionPattern(int start, int add)
{
this.start=start;
this.add=add;
current =start;
}
Public int currentNumber(){
return current;

}

Public void next(){
current+=add;

}

Public void prev(){
If (start<=current-add){
	current-=add;

}
}
}
